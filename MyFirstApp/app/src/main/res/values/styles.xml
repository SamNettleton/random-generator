<resources>

    <!-- Base application theme. -->

    <style name="DarkButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorDarkButton</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LightButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DarkEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ActionBarText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlertDialogLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowTitleStyle">@color/colorAccent</item>
        <item name="android:textAppearanceMedium">@color/colorPrimaryDark</item>
        <item name="android:borderlessButtonStyle">@color/colorPrimaryDark</item>
        <item name="android:buttonBarStyle">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/colorDarkBackground</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <attr name="editbutton_picture" format="reference"/>
</resources>
